<?xml version="1.0"?>
<config>
    <modules>
        <FasterPay_FasterPay>
            <version>1.4.0</version>
        </FasterPay_FasterPay>
    </modules>
    <frontend>
        <routers>
            <fasterpay>
                <use>standard</use>
                <args>
                    <module>FasterPay_FasterPay</module>
                    <frontName>fasterpay</frontName>
                </args>
            </fasterpay>
        </routers>
        <layout>
            <updates>
                <fasterpay>
                    <file>fasterpay.xml</file>
                </fasterpay>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <fasterpay>
                <class>FasterPay_FasterPay_Model</class>
            </fasterpay>
        </models>
        <blocks>
            <fasterpay>
                <class>FasterPay_FasterPay_Block</class>
            </fasterpay>
        </blocks>
        <helpers>
            <fasterpay>
                <class>FasterPay_FasterPay_Helper</class>
            </fasterpay>
        </helpers>
        <events>
            <sales_order_shipment_track_save_after>
                <observers>
                    <fasterpay_fasterpay>
                        <type>singleton</type>
                        <class>FasterPay_FasterPay_Model_Observer</class>
                        <method>updateDeliveryData</method>
                    </fasterpay_fasterpay>
                </observers>
            </sales_order_shipment_track_save_after>
            <sales_order_save_after>
                <observers>
                    <fasterpay_fasterpay>
                        <type>singleton</type>
                        <class>FasterPay_FasterPay_Model_Observer</class>
                        <method>updateDeliveryData</method>
                    </fasterpay_fasterpay>
                </observers>
            </sales_order_save_after>
        </events>
    </global>
    <default>
        <payment>
            <fasterpay_fasterpay>
                <title>FasterPay</title>
                <active>1</active>
                <model>fasterpay/method_fasterpay</model>
                <order_status>pending_payment</order_status>
                <fee_payer>buyer</fee_payer>
                <allowspecific>0</allowspecific>
                <fasterpay_istest>0</fasterpay_istest>
                <debug_mode>0</debug_mode>
            </fasterpay_fasterpay>
        </payment>
    </default>
</config>
